{% extends 'base.html.twig' %}

{% block body %}
    <h1>Comments list</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Date</th>
            <th>Comment text</th>
            <th>Comment author</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{% if comment.commentDate %}{{ comment.commentDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ comment.commentText }}</td>
                <td>{{ comment.commentAuthor }}</td>
                <td>
                    <a href="{{ path('comment_show', { 'id': comment.id }) }}" class="btn btn-default btn-sm">show</a>

                    <a href="{{ path('comment_edit', { 'id': comment.id }) }}" class="btn btn-success btn-sm">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <p align="center">
        <a href="{{ path('comment_new') }}" class="btn btn-info">Create a new comment</a>
    </p>
{% endblock %}
