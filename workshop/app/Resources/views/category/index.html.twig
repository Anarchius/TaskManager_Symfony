{% extends 'base.html.twig' %}

{% block body %}
    <h1>Categories list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td><span class="fa fa-{{ category.icon }}">&nbsp;</span> {{ category.name }}</td>
                <td>
                    <a href="{{ path('category_show', { 'id': category.id }) }}" class="btn btn-default btn-sm">show</a>
                    <a href="{{ path('category_edit', { 'id': category.id }) }}" class="btn btn-success btn-sm">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new')  }}" class="btn btn-default">Create a new category</a>
{% endblock %}
