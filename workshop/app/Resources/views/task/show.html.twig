{% extends 'base.html.twig' %}

{% block body %}
    <h1>Task</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ task.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if task.date %}{{ task.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <th>Complete</th>
                <td>{% if task.complete %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Prior</th>
                <td>{{ task.prior }}</td>
            </tr>
        </tbody>
    </table>
    <p align="center">
    <a href="{{ path('task_index') }}" class="btn btn-info">Back to the list</a><br>
    </p>
    <p align="center">
    <a href="{{ path('task_edit', { 'id': task.id }) }}" class="btn btn-default">Edit</a>
    </p>
    {{ form_start(delete_form) }}
<p align="center">
        <input type="submit" value="Delete" class="btn btn-danger">
</p>
    {{ form_end(delete_form) }}
{% endblock %}
